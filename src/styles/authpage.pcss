@import 'colors.pcss';
@import 'variables.pcss';

.container {
  width: 100%;
  margin-top: $default-padding;

  display: flex;
  justify-content: center;
  align-items: center;

  .box {
    width: 400px;
    background-color: $container-background-color;
    border: 1px solid $element-border-color;
    border-radius: $default-radius;
    padding: 1.5px;
    display: flex;
    flex-direction: column;
    align-items: stretch;

    .content {
      margin: 0;
      padding: 0;
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: stretch;
      align-items: stretch;
      padding-bottom: $form-margin;
    }

    .header {
      height: 45px;
      display: flex;
      margin-left: $form-margin;
      margin-right: $form-margin;
      border-bottom: 1px solid $element-border-color;

      .tab {
        color: $element-foreground-color;
        width: 50%;
        background-color: $container-background-color;
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        text-decoration: none;
        color: $element-unselected-foreground-color;
      }

      .tab:first-child.selected {
        border-right: 1px solid $element-border-color;
      }

      .tab:last-child.selected {
        border-left: 1px solid $element-border-color;
      }

      .tab.selected {
        color: $header-active-color;
        font-weight: 600;
      }

      .tab:hover {
        color: $header-hover-color;
      }
      .tab:active {
        color: $header-active-color;
      }
    }
  }
}
