{
  "name": "schedule-manager",
  "version": "1.0.0",
  "description": "Выпускное задание для Xsolla Summer School 2019 - сервис для управления расписанием и домашними заданиями студентов.",
  "main": "index.js",
  "scripts": {
    "start": "npm run lint && cross-env NODE_ENV=development webpack-dev-server --open --mode development --config ./webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack --mode production --config ./webpack.config.prod.js",
    "start:prod": "npm run lint && npm run build && http-server ./public -p 8081 -o --cors",
    "lint": "eslint ./src --max-warnings 10",
    "lint:write": "eslint ./src --fix --max-warnings 10",
    "lint-if-in-master": "git-branch-is -r \"^(?!.*master).*$\" || git-branch-is master && lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint-if-in-master",
      "pre-rebase": "lint-staged"
    }
  },
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "npm run lint:write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/Trokne/schedule-manager.git"
  },
  "keywords": [
    "schedule",
    "task",
    "student",
    "university"
  ],
  "author": "Mikhail Vshivkov",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/Trokne/schedule-manager/issues"
  },  
  "homepage": "https://gitlab.com/Trokne/schedule-manager#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@hot-loader/react-dom": "^16.8.6",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.12.0",
    "browserlist": "^1.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "core-js": "^3.1.4",
    "cross-env": "^5.2.0",
    "css-loader": "^3.1.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-jest-enzyme": "^7.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.15.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "file-loader": "^4.1.0",
    "git-branch-is": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.9.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "precss": "^4.0.0",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.12.10",
    "resolve-url-loader": "^3.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.4.1",
    "url-loader": "^2.1.0",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.3.2",
    "@material-ui/icons": "^4.2.1",
    "antd": "^3.22.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.12.10",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "typeface-roboto": "0.0.75"
  }
}
